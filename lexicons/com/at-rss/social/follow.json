{
  "lexicon": 1,
  "id": "com.at-rss.social.follow",
  "defs": {
    "main": {
      "type": "record",
      "description": "An in-app follow relationship to another AT-RSS user",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["subject", "createdAt"],
        "properties": {
          "subject": {
            "type": "string",
            "format": "did",
            "description": "DID of the user being followed"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          }
        }
      }
    }
  }
}
