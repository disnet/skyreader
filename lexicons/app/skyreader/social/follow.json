{
	"lexicon": 1,
	"id": "app.skyreader.social.follow",
	"defs": {
		"main": {
			"type": "record",
			"description": "An in-app follow relationship to another Skyreader user",
			"key": "tid",
			"record": {
				"type": "object",
				"required": ["subject", "createdAt"],
				"properties": {
					"subject": {
						"type": "string",
						"format": "did",
						"description": "DID of the user being followed"
					},
					"createdAt": {
						"type": "string",
						"format": "datetime"
					}
				}
			}
		}
	}
}
